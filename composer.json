{
    "name": "somnambulist/php-pm-phar",
    "type": "library",
    "description": "Phar archive builder for php-pm",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "php-pm/php-pm": "^2.4",
        "php-pm/httpkernel-adapter": "^2.3",
        "symfony/console": "6.2.*",
        "symfony/config": "6.2.*",
        "symfony/dotenv": "6.2.*",
        "symfony/finder": "6.2.*"
    },
    "require-dev": {
        "symfony/dependency-injection": "6.2.*"
    },
    "autoload": {
        "psr-4": {
            "PHPPM\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
